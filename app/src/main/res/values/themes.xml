    <style name="Theme.Negi" parent="Base.Theme.Negi" />

    <style name="TextAppearance.App.GsTextRegular" parent="Theme.Negi">
        <item name="fontFamily">@font/gs_text_regular</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="">
        <item name="android:fontFamily">@font/ps_regular</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="ThemeOverlay.App.ToolbarText" parent="">
        <item name="android:fontFamily">@font/ps_regular</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircularCrop" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedCorners" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/ps_regular</item>
        <item name="android:fontFamily">@font/ps_regular</item>
    </style>
